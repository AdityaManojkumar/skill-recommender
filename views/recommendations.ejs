<!DOCTYPE html>
<html>
<head>
    <title>Recommendations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Your Recommendations</h2>
            <h4>Projects:</h4>
            <ul class="list-group mb-3">
                <% recommendations.projects.forEach(project => { %>
                    <li class="list-group-item"><%= project %></li>
                <% }) %>
            </ul>
            <h4>Companies:</h4>
            <ul class="list-group">
                <% recommendations.companies.forEach(company => { %>
                    <li class="list-group-item"><%= company %></li>
                <% }) %>
            </ul>
            <a href="/dashboard" class="btn btn-secondary mt-3 w-100">Back to Dashboard</a>
        </div>
    </div>
</body>
</html>
