<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Dashboard</h2>
            <form action="/save-skills" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" name="dob" required>
                </div>
                <div class="mb-3">
                    <label for="semester" class="form-label">Semester</label>
                    <input type="number" class="form-control" name="semester" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Select Subjects</label>
                    <div class="d-flex flex-wrap">
                        <% subjects.forEach(subject => { %>
                            <div class="form-check me-3">
                                <input class="form-check-input" type="checkbox" name="subjects" value="<%= subject %>">
                                <label class="form-check-label"><%= subject %></label>
                            </div>
                        <% }) %>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Select Skills</label>
                    <div class="d-flex flex-wrap">
                        <% skills.forEach(skill => { %>
                            <div class="form-check me-3">
                                <input class="form-check-input" type="checkbox" name="skills" value="<%= skill %>">
                                <label class="form-check-label"><%= skill %></label>
                            </div>
                        <% }) %>
                    </div>
                </div>
                <button type="submit" class="btn btn-success w-100 mb-3">Save Skills</button>
            </form>
            <form action="/get-recommendations" method="get">
                <button type="submit" class="btn btn-primary w-100">Get Recommendations</button>
            </form>
        </div>
    </div>
</body>
</html>
